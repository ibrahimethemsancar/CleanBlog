<%- include('partials/_header') -%>

<body>

  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= singlePost.title %></h1>
           
            <span class="meta">Posted 
            
              <%= singlePost.dateCreated %></span>
              <hr>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
         <p><%= singlePost.detail %></p>
         <a class="btn btn-danger float-right ml-2" href="/post/<%= singlePost._id %>?_method=DELETE" onclick="alert('Are you sure?')">DELETE</a>
         <a class="btn btn-warning float-right" href="/post_edit/<%= singlePost._id %>">UPDATE</a>

        </div>
      </div>
    </div>
  </article>

  <hr>

  <%- include('partials/_footer') -%>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
